generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model products {
  id         String   @id @default(uuid())
  name       String
  sku        String   @unique // unique product code
  category   String
  unit       String // unit of measure
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
