generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Users model
model Users {
  id        String   @id @default(uuid())
  loginId   String   @unique
  email     String   @unique
  password  String
  role      String   @default("staff") // manager or staff
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  id         String     @id @default(uuid())
  name       String
  sku        String     @unique
  category   String
  unit       String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  receipts   Receipts[] @relation("ReceiptProducts")
}

model Warehouses {
  id         String   @id @default(uuid())
  name       String
  shortCode  String   @unique
  address    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Receipts {
  id         String        @id @default(uuid())
  reference  String        @unique
  from       String
  to         String
  contact    String
  schedule   DateTime
  status     ReceiptStatus
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt
  products   Products[]    @relation("ReceiptProducts")
}

enum ReceiptStatus {
  draft
  ready
  done
}
